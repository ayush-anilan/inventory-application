<%- include('pages/layout') %>
    <div class="col-sm-10 border">
        <h1>
            Category: <%= category.name %>
        </h1>
    </div>
    <div class="border col-sm-10">
        <h4>Items</h4>
        <% if (items.length> 0) { %>
            <ul>
                <% items.forEach((item)=> { %>
                    <li>
                        <%= item.name %>
                    </li>
                    <p>
                        <%= item.description %>
                    </p>
                    <% }) %>
            </ul>
            <% } else { %>
                <p>This category has no items</p>
                <% } %>

                    <a href="/shop/categories/<%= category._id %>/delete">Delete category</a>

    </div>