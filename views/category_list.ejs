<%- include('pages/layout') %>
    <div class="col-sm-10 border">
        <ul>
            <h1>
                <%= title %>
            </h1>
            <% category_list.forEach(function (item){ %>
                <li>
                    <strong>
                        <%= item.name %>
                    </strong>
                    <p>
                        <%= item.description %>
                    </p>
                </li>
                <a href="/shop/categories/<%= item._id %>/delete">Delete category</a>
                <% }); %>
        </ul>
        <a href="/shop/items">Items</a>
    </div>