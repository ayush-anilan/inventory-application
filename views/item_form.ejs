<%- include('pages/layout') %>
    <h1>Create Item</h1>
    <form action="" method="post">
        <div class="form-group">
            <label for="name">Item Name</label>
            <input type="text" name="item_name" placeholder="Item Name" id="">
            <br>
            <label for="category">Category</label>
            <select name="category" id="">
                <option value="">Please select the category</option>
                <% categories.forEach((item,index)=> {%>
                    <option value="<%= item._id %>">
                        <%=item.name %>
                    </option>
                    <% });%>
            </select>
            <br>
            <label for="description">Description</label>
            <input type="text" name="item_description" placeholder="Description" id="">
            <br>
            <label for="price">Price</label>
            <input type="number" name="item_price" placeholder="price of the item" id="">
            <br>
            <label for="number_in_stock">Number in Stock</label>
            <input type="number" name="item_stock" placeholder="stock" id="">
        </div>
        <button type="submit">Submit</button>
    </form>